<common:BasePage
    x:Class="Linea11.Views.LineDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Linea11.Views"
    xmlns:common="using:SaS.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
    	<TextBlock HorizontalAlignment="Left" Margin="49,63,0,0" TextWrapping="Wrap" Text="{Binding NombreComercial}" VerticalAlignment="Top"/>
    	<TextBlock HorizontalAlignment="Left" Margin="49,114,0,0" TextWrapping="Wrap" Text="{Binding OrigenLinea}" VerticalAlignment="Top"/>
    	<TextBlock HorizontalAlignment="Left" Margin="49,160,0,0" TextWrapping="Wrap" Text="{Binding DestinoLinea}" VerticalAlignment="Top"/>

    </Grid>
</common:BasePage>

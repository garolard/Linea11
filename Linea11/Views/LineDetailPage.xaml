<common:BasePage
    x:Class="Linea11.Views.LineDetailPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Linea11.Views"
    xmlns:common="using:Linea11.Common"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
    	<Grid.RowDefinitions>
    		<RowDefinition Height="Auto"/>
    		<RowDefinition/>
    	</Grid.RowDefinitions>
    	<StackPanel Orientation="Horizontal" Margin="20,0">
    		<Grid Height="40" Width="40" Background="{Binding ColorLinea, Converter={StaticResource StringToColorConverter}}">
    			<TextBlock TextWrapping="Wrap" Text="{Binding NombreComercial}" HorizontalAlignment="Center" VerticalAlignment="Center" FontWeight="Bold" FontSize="13.333"/>
    		</Grid>
    		<TextBlock TextWrapping="Wrap" Text="{Binding OrigenLinea}" VerticalAlignment="Center"/>
    		<TextBlock TextWrapping="Wrap" Text=" - " VerticalAlignment="Center"/>
    		<TextBlock TextWrapping="Wrap" Text="{Binding DestinoLinea}" VerticalAlignment="Center"/>
    	</StackPanel>

    </Grid>
</common:BasePage>
